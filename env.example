# Base de données PostgreSQL
# Exemple pour SQLite (développement local simple):
# DATABASE_URL="file:./dev.db"
# Exemple pour PostgreSQL local:
# DATABASE_URL="postgresql://user:password@localhost:5432/weekeat?schema=public"
# Pour Supabase/Vercel Postgres, utiliser l'URL fournie par le service
DATABASE_URL="postgresql://user:password@localhost:5432/weekeat?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="générer-une-clé-secure-avec-openssl-rand-base64-32"

# OpenAI (obligatoire pour génération de repas)
OPENAI_API_KEY="sk-votre-clé-openai"

# Email - Resend (recommandé)
# Obtenir votre clé sur https://resend.com
RESEND_API_KEY="re_votre-clé-resend"
# Utiliser votre domaine vérifié ou "onboarding@resend.dev" pour test
EMAIL_FROM="noreply@votredomaine.com"

# Option 2: SMTP classique (alternative)
# EMAIL_SERVER_HOST="smtp.gmail.com"
# EMAIL_SERVER_PORT="587"
# EMAIL_SERVER_USER="votre-email@gmail.com"
# EMAIL_SERVER_PASSWORD="votre-mot-de-passe-app"

# Google OAuth (optionnel)
# GOOGLE_CLIENT_ID="votre-client-id"
# GOOGLE_CLIENT_SECRET="votre-client-secret"
